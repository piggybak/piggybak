}
.button:hover,  input[type="submit"]:hover{text-decoration:none; background-position:0 -29px; color:#878787; }
.button:visited{color:#878787;}
input[type="submit"]{padding:6px 15px; }

/* Separator */
.separator {
	display:block;
	height:25px;
	text-align:center;
	width:100%;
	clear:both;
}

.separator.line {
	display:block;
	height:60px;
	text-align:center;
	width:100%;
	clear:both;
	margin:0px;
	background-image:url(<%= image_path "line.gif" %>);
	background-repeat:repeat-x;
	background-position:center;
}



/* sidebar */
.widget-title{
	font-weight:normal;
	font-size:18px;
