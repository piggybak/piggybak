.clear { clear: both; }
#cart_form {
  strong { display: block; }
  #product_details { display: block; }
  input#quantity { margin-bottom: 5px; }
  input#submit { display: block; }
}
#cart_link {
  height: 30px;
  a { background: url(<%= image_path "icon_cart.png" %>) no-repeat; padding-left: 30px; line-height: 22px; display: inline-block; }
}
#cart {
  #cart_error {
    color: #17A2A2;
    font-weight: bold; 
    margin-bottom: 10px;
  }
  #totals {
    font-size: 1.3em;
    font-weight: bold;
    float: right;
    small { display: block; font-weight: normal; }
  }
  #update { margin-top: 10px; float: right; display: block; clear: right; }
  #checkout {
    margin: 10px 10px 0px 0px;
    float: right;
    padding: 6px 15px; 
    border-radius: 20px;
    -webkit-border-radius: 20px; 
    border: 1px solid #E6E6E6;
    background: url(bg-button.gif) repeat-x;
  }
}
#checkout {
  #checkout_error {
    color: #17A2A2;
    margin-bottom: 10px; 
  }
  #copy { margin-left: 10px; font-size: 0.9em; }
  #totals {
    font-size: 1.3em;
    font-weight: bold;
    float: right;
    small { display: block; font-weight: normal; }
  }
  #billing_address, #shipping_address,
  #totals_section, #add_details {
    float: left;
    width: 49%;
    margin-top: 20px; 
  }
  #shipping_address, #billing_address {
    select { width: 210px; }
  }
  #totals_section table {
    width: 87%; 
  }
  #shipping, #payment { 
    margin-top: 10px;
  }
  #payment select {
    width: 100px; 
  }
  #submit {
    margin-top: 10px;
  }
}

#receipt, #list_orders {
  h3 { margin: 20px 0px 0px 0px; }
  #items { float: right; width: 600px; }
  h2 { clear: both; margin-top: 30px; width: 49%; }
}

#single_image .title { margin-top: 50px; }

#topnav a#home { font-size: 15px; text-decoration: underline; color: #fc8607; font-weight: bold; }
