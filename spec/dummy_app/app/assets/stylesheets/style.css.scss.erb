/* form & button */
form{margin:0; padding:0;}
input[type="email"],
input[type="password"],
input[type="text"],
textarea {
	padding: 6px;
	border:0px;
	color:#999999;
	font-size:11px;
	border:solid 1px #e6e6e6; 
	background:#fff
}
textarea:focus{outline:0;}

.button, input[type="submit"]{
	display:inline-block;
	padding:4px 15px; 
